#!/usr/bin/env bash
# A script that configures the container

# Replace the user in the Nginx configuration file
sed -i 's/^user.*/user nginx;/' /etc/nginx/nginx.conf

# Update the Nginx default site configuration to listen on all active IPs on port 8080
cat <<EOL > /etc/nginx/conf.d/default.conf
server {
    listen *:8080;
    server_name _;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }
}
EOL

# Restart Nginx to apply the changes
service nginx restart

# Print a message indicating that Nginx is now running as the nginx user
echo "Nginx is now running as the nginx user on all active IPs, port 8080."
