#!/usr/bin/env bash
# a script that checks for updates and then installs nginx

# Update the package repository and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create a basic HTML file with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Create an Nginx server block configuration
cat <<EOF | sudo tee /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    server_name _;

    location / {
        root /var/www/html;
    }
}
EOF

# Test the Nginx configuration to ensure there are no syntax errors
sudo nginx -t

# Restart Nginx without using systemctl
sudo kill -HUP $(cat /var/run/nginx.pid)

# Check if Nginx is still running
if sudo service nginx status | grep -q "active (running)"; then
    echo "Nginx restarted successfully."
else
    echo "Nginx restart failed."
fi
